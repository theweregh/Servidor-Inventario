{
  "esversion": 6,
  "node": true,
  "moz": true,          
  "expr": true,         
  "undef": false,       // evita errores por variables que JSHint no reconoce
  "unused": false,      // evita warnings por variables aparentemente no usadas
  "boss": true,         // permite assignments en condiciones
  "globals": {
    "require": true,
    "exports": true,
    "module": true
  }
}